<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 >

   <View 
       android:id="@+id/Store_view_top"
       android:layout_width="fill_parent"
       android:layout_height="100dp"
       android:background="@drawable/store_top1"
       />
   
   <LinearLayout
       android:id="@+id/Store_view_score"
       android:layout_width="wrap_content"
       android:layout_height="35dp"
       android:layout_below="@+id/Store_view_top"
       android:orientation="horizontal"
       android:gravity="center_vertical"
       android:background="@drawable/store_top2" >
       
       <TextView   
       android:id="@+id/Store_view_getscore1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
       android:text="@string/store_score" 
       android:textSize="15sp"  
       android:textColor="@android:color/white"  
       />
       
       <TextView 
       android:id="@+id/Store_view_getscore2"  
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"     
       android:textSize="22sp"   
       android:textColor="@android:color/white"   
           />
       
       
   </LinearLayout>
   
   
   
   <ListView 
       android:id="@+id/Store_view_list"
       android:layout_below="@+id/Store_view_score"
       android:layout_above="@+id/Store_view_bottom"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:background="#18283F"
       android:cacheColorHint="#00000000" 
       android:listSelector="@android:color/transparent"
       android:scrollbars="none"
       android:divider="@drawable/list_cell_line"
       android:descendantFocusability="blocksDescendants"
       >
       
       
   </ListView>
   
   <LinearLayout
        android:id="@+id/Store_view_bottom"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@drawable/store_buttom"
    >  
    <Button 
        android:id="@+id/Store_button_back"
        android:layout_marginTop="9dp"
        android:text="@string/store_back"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="@drawable/store_button_break"
        /> 
   </LinearLayout>

</RelativeLayout>
