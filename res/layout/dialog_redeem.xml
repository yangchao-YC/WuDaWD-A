<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    
 <LinearLayout
        android:id= "@+id/redeem_bg"
        android:layout_width= "280dp"
        android:layout_height= "wrap_content"
        android:layout_centerInParent= "true"
        android:background= "@drawable/dialogbg_big"
        android:orientation= "vertical"
        >
        
      <TextView
            android:id= "@+id/redeem_title"
            android:layout_width= "fill_parent"
            android:layout_height= "wrap_content"
            android:layout_marginTop= "15dp"
            android:gravity= "center"
            android:textColor= "#FFFFFF"
            android:textSize ="20sp"
            android:textStyle= "bold"
            android:text= "@string/redeem_score" />
      
      <LinearLayout 
           android:id="@+id/redeem_dialog_process"
           android:layout_width= "fill_parent"
           android:layout_height= "wrap_content" 
           android:visibility="gone"
           android:orientation= "vertical"      
          >
     
       <LinearLayout
              android:layout_width= "fill_parent"
              android:layout_height= "wrap_content"
              android:visibility= "visible"
              android:layout_marginLeft= "10dp"
              android:layout_marginRight= "10dp"
              android:orientation= "horizontal"
              >          
                  <TextView
                              android:id= "@+id/redeem_content_temple"
                              android:layout_width= "wrap_content"
                              android:layout_height= "wrap_content"
                              android:layout_marginTop= "15dp"
                              android:textColor= "#FFFFFF"
                              android:textSize ="10sp"
                              android:textStyle= "bold"
                              android:text= "@string/redeem_content_front" />
                 
                   <TextView
                              android:id= "@+id/redeem_content"
                              android:layout_width= "fill_parent"
                              android:layout_height= "wrap_content"                                          
                              android:layout_marginTop= "15dp"
                              android:layout_marginLeft= "10dp"
                              android:textColor= "#FFFFFF"
                              android:textSize ="10sp"
                              android:textStyle= "bold"
                               />            
      </LinearLayout>
      
      
       <LinearLayout
                  android:id= "@+id/Redeem_process"
                  android:layout_width= "fill_parent"
                  android:layout_height= "wrap_content"
                  android:visibility= "visible"
                  android:layout_marginLeft= "20dp"
                  android:layout_marginRight= "15dp"
                  android:orientation= "horizontal"            
                  >
                   
             <LinearLayout
                  android:id= "@+id/Redeem_process_item"
                  android:layout_width= "fill_parent"
                  android:layout_height= "wrap_content"
                  android:layout_marginTop= "15dp"
                  android:orientation= "horizontal"            
                  >
                  
                  <ImageView
                        android:id= "@+id/redeem_dialog_image"
                        android:layout_width= "65dp"
                        android:layout_height= "65dp"       
                        android:background= "@android:color/transparent"                     
                          />
                  
                  <LinearLayout                   
                        android:layout_width= "fill_parent"
                        android:layout_height= "65dp"  
                        android:orientation= "vertical"
                        android:background= "#1A6415"                        
                            >                        
                            <RelativeLayout
                                android:layout_width= "fill_parent"
                                android:layout_height= "fill_parent"  
                                android:layout_weight= "1"                               
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                >
                                <TextView  
                                      android:id= "@+id/redeem_score_consum"                            
                                      android:layout_toLeftOf="@+id/redeem_score_cost"   
                                      android:layout_alignBaseline="@+id/redeem_score_cost"                              
                                      android:layout_width ="wrap_content"
                                      android:layout_height ="wrap_content"
                                      android:textColor= "#FFFFFF"
                                      android:textSize ="10dp"
                                      android:textStyle= "bold"
                                      android:text= "@string/redeem_content_cost"
                                    />
                               
                                <TextView
                                      android:id= "@+id/redeem_score_cost"
                                      android:layout_toLeftOf="@+id/redeem_score_temple"
                                      android:layout_width ="wrap_content"
                                      android:layout_height ="wrap_content"
                                      android:layout_marginLeft="5dp"
                                      android:layout_marginRight="5dp"
                                      android:textColor= "#FFFFFF"
                                      android:textSize ="17dp"
                                      android:textStyle= "bold"
                                      android:text ="240"
                                    />                               
                                <TextView
                                      android:id="@+id/redeem_score_temple"  
                                      android:layout_alignBaseline="@+id/redeem_score_cost"                             
                                      android:layout_width ="wrap_content"
                                      android:layout_height ="wrap_content"
                                      android:textColor= "#FFFFFF"
                                      android:textSize ="10dp"
                                      android:textStyle= "bold"
                                      android:layout_alignParentRight="true"
                                      android:text= "@string/score"
                                    />
                               
                            </RelativeLayout>
                           
                              <RelativeLayout
                                android:layout_width= "fill_parent"
                                android:layout_height= "fill_parent"
                                android:layout_weight= "1"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="8dp"
                                >                             
                                   <TextView
                                      android:id= "@+id/redeem_remain_temple" 
                                      android:layout_width ="wrap_content"
                                      android:layout_height ="wrap_content"
                                      android:layout_toLeftOf="@+id/redeem_remain_score"                                   
                                      android:textColor= "#FFFFFF"
                                      android:textSize ="10dp"
                                      android:textStyle= "bold"
                                      android:text= "@string/redeem_content_left"
                                    />                            
                                <TextView
                                      android:id= "@+id/redeem_remain_score"
                                      android:layout_toLeftOf="@+id/redeem_remain_score_temple"
                                      android:layout_width ="wrap_content"
                                      android:layout_height ="wrap_content"
                                      android:textColor= "#FFFFFF"
                                      android:layout_marginLeft="2dp"
                                      android:layout_marginRight="2dp"
                                      android:textSize ="10dp"
                                      android:textStyle= "bold"
                                      android:text ="1340"
                                    />                               
                                <TextView
                                      android:id="@+id/redeem_remain_score_temple"   
                                      android:layout_width ="wrap_content"
                                      android:layout_height ="wrap_content"
                                      android:textColor= "#FFFFFF"
                                      android:textSize ="10dp"
                                      android:textStyle= "bold"
                                      android:text= "@string/score"
                                      android:layout_alignParentRight="true"
                                    />                             
                              </RelativeLayout >                        
                        </LinearLayout >
             </LinearLayout>       
       </LinearLayout>
       
       
       <LinearLayout 
            android:layout_width= "fill_parent"
            android:layout_height= "fill_parent"  
            android:orientation= "horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight= "20dp"
            android:layout_marginTop= "5dp"
           >
           
           <EditText  
		        android:id="@+id/redeem_edit_phone"  
		        android:layout_width="150dp"  
		        android:layout_height="20dp"  
		        android:background="@android:color/white"  
		        android:textSize="12dp"
		        android:hint="手机号"
		        android:paddingLeft="10dp" /> 
		        
           <EditText  
		        android:id="@+id/redeem_edit_name"  
		        android:layout_width="fill_parent"  
		        android:layout_height="20dp" 
		        android:layout_marginLeft="5dp"
		        android:background="@android:color/white"  
		        android:textSize="12dp"
		        android:hint="真实姓名"
		        android:paddingLeft="10dp" /> 
       </LinearLayout>
       
       <EditText  
		        android:id="@+id/redeem_edit_address"  
		        android:layout_width="fill_parent"  
		        android:layout_height="20dp" 
		        android:layout_marginLeft="20dp"
                android:layout_marginRight= "20dp"
                android:layout_marginTop= "5dp"
		        android:background="@android:color/white"  
		        android:textSize="12dp"
		        android:hint="送货地址"
		        android:paddingLeft="10dp" /> 
		        
       <TextView 
                android:id="@+id/redeem_process_hint1"
                android:layout_width="fill_parent"  
		        android:layout_height="15dp" 
		        android:layout_marginLeft="20dp"
                android:layout_marginRight= "20dp"
                android:layout_marginTop= "5dp"
                android:textSize="10dp"
                android:textColor= "#FFFFFF"
                android:textStyle= "bold"
                android:text= "@string/redeem_hint1"
           />
       
        <TextView 
                android:id="@+id/redeem_process_hint2"
                android:layout_width="fill_parent"  
		        android:layout_height="15dp" 
		        android:layout_marginLeft="20dp"
                android:layout_marginRight= "20dp"
                android:textSize="10dp"
                android:textColor= "#FFFFFF"
                android:textStyle= "bold"
                android:text= "@string/redeem_hint2"
           />
        
          </LinearLayout>
        
       <!-- 2 -->
       <RelativeLayout
           android:id="@+id/redeem_dialog_success"
           android:layout_width= "fill_parent"
           android:layout_height= "wrap_content"                 
           android:visibility="visible"
           android:orientation= "vertical"   
           android:layout_marginBottom="15dp"   
           >
             
            
           
             <LinearLayout
                  android:id="@+id/redeem_dialog_success_top"
                  android:layout_width= "fill_parent"
                  android:layout_height= "wrap_content"                
                  android:layout_marginLeft= "15dp"
                  android:layout_marginRight= "15dp"
                  android:layout_marginTop= "40dp"             
                  android:background="@android:color/white"
                  android:orientation= "horizontal"            
                  >
                  
                  <ImageView
                        android:id= "@+id/redeem_success_image"
                        android:layout_width= "65dp"
                        android:layout_height= "65dp"  
                        android:layout_margin="5dp"     
                        android:background= "@android:color/transparent"                     
                          />
                  
                  <LinearLayout 
                        android:layout_width= "fill_parent"
                        android:layout_height= "fill_parent"  
                        android:layout_margin="5dp"  
                        android:orientation="vertical"  
                      >
                      
                      
                          <TextView                              
                             android:id= "@+id/redeem_success_pro"
                             android:layout_width= "wrap_content"
                             android:layout_height= "wrap_content"                    
                             android:textColor="#1A6416"
                             android:textStyle="bold"
                             android:textSize="10dp"
                             android:text="@string/redeem_success_pro"
                              />
                          <TextView 
                             android:id= "@+id/redeem_success_pro_info"                             
                             android:layout_width= "fill_parent"
                             android:layout_height= "wrap_content"
                             android:text="橘色小灯"
                             android:textSize="10dp"
                             android:textColor="#1A6416"
                             android:textStyle="bold"
                              />
                      
                      <LinearLayout 
                           android:layout_width= "fill_parent"
                           android:layout_height= "wrap_content"
                           android:layout_marginTop="8dp" 
                          >
                           <TextView                              
                             android:id= "@+id/redeem_success_reciever"
                             android:layout_width= "wrap_content"
                             android:layout_height= "wrap_content"                                      
                             android:textColor="#1A6416"
                             android:textStyle="bold"
                             android:textSize="8sp"
                             android:text="@string/redeem_success_reciever"
                              />
                          <TextView 
                             android:id= "@+id/redeem_success_reciever_info"
                             android:layout_width= "wrap_content"
                             android:layout_height= "wrap_content"                          
                             android:layout_marginLeft="3dp"
                             android:textSize="8sp"
                             android:textColor="#1A6416"
                             android:textStyle="bold"
                              />                         
                      </LinearLayout>
                      
                      <LinearLayout 
                           android:layout_width= "fill_parent"
                           android:layout_height= "wrap_content"
                          >
                           <TextView                              
                             android:id= "@+id/redeem_success_phone"
                             android:layout_width= "wrap_content"
                             android:layout_height= "wrap_content"                                      
                             android:textColor="#1A6416"
                             android:textStyle="bold"
                             android:textSize="8sp"
                             android:text="@string/redeem_success_phone"
                              />
                          <TextView 
                             android:id= "@+id/redeem_success_phone_info"
                             android:layout_width= "wrap_content"
                             android:layout_height= "wrap_content"                          
                             android:layout_marginLeft="3dp"
                             android:textSize="8sp"
                             android:textColor="#1A6416"
                             android:textStyle="bold"
                              />                      
                      </LinearLayout>
                      
                      <LinearLayout 
                           android:layout_width= "fill_parent"
                           android:layout_height= "wrap_content"
                          >
                            <TextView                              
                             android:id= "@+id/redeem_success_address"
                             android:layout_width= "wrap_content"
                             android:layout_height= "wrap_content"                                      
                             android:textColor="#1A6416"
                             android:textStyle="bold"
                             android:textSize="8sp"
                             android:text="@string/redeem_success_address"
                              />
                          <TextView 
                             android:id= "@+id/redeem_success_address_info"
                             android:layout_width= "wrap_content"
                             android:layout_height= "wrap_content"                          
                             android:layout_marginLeft="3dp"
                             android:singleLine="true"
                             android:ellipsize="end"
                             android:textSize="8sp"
                             android:textColor="#1A6416"
                             android:textStyle="bold"
                              />                
                      </LinearLayout>                   
                      
                  </LinearLayout>
                </LinearLayout>
                
                <TextView 
                       android:id="@+id/redeem_success_hint"
                       android:layout_below="@+id/redeem_dialog_success_top"
                       android:layout_width= "wrap_content"
                       android:layout_height= "wrap_content"                          
                       android:layout_marginLeft="25dp"
                       android:layout_marginTop="40dp"                   
                       android:text="@string/redeem_success_hint"
                       android:textSize="10dp"
                       android:textColor="#FFFFFF"
                       android:textStyle="bold"    
                    />
                
                 <ImageView 
                 android:id= "@+id/redeem_stamp"
                 android:layout_width= "120dp"
                 android:layout_height= "120dp"
                 android:layout_marginTop="18dp"
                 android:layout_marginLeft="140dp"
                 />
             
         </RelativeLayout>
         <!-- 2end -->
       
         <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"        
            android:layout_margin="10dp"   
            android:layout_marginTop="32dp"              
            android:orientation="horizontal">
        
         <Button 
                android:id="@+id/redeem_dialog_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/exit_ok"
                android:text="@string/review"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="14sp"/>
            <Button 
                android:id="@+id/redeem_dialog_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/exit_no"
                android:text="@string/sure"
                android:layout_marginLeft="10dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="14sp"/>           
            </LinearLayout>
                   
         
  </LinearLayout>
    
 
</RelativeLayout>