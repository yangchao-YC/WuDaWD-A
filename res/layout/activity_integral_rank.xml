<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/integral_main"
    android:weightSum="6"
    android:orientation="vertical" >

      <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
           />
     
      <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="2"
           >
           <TextView 
            android:id="@+id/integral_rank"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:gravity="center"        
            android:text="@string/integral_rank_score"
            android:textSize="25sp"
            android:paddingTop="10dp"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:shadowDx="1.2"
            android:shadowDy="1.2"
            android:shadowRadius="5"
	        android:shadowColor="#004400"
            />
           
           <LinearLayout 
		            android:id="@+id/integral_rank_you"
		            android:layout_width="fill_parent"
		            android:layout_height="1dp"
		            android:gravity="center"
		            android:orientation="horizontal"
		            android:layout_weight="1"
		            >
		           <TextView 
		                android:id="@+id/integral_rank_temple"
		                android:layout_width="wrap_content"
			            android:layout_height="wrap_content"	            
			            android:textSize="18sp"
			            android:paddingTop="3dp"
			            android:textColor="#FFFFFF"
			            android:textStyle="bold" 
			            android:shadowDx="1.2"
			            android:shadowDy="1.2"
			            android:shadowRadius="5"
				        android:shadowColor="#004400"
		                />            
		             
		        </LinearLayout>
      </LinearLayout>

      <ListView
          android:id="@+id/integral_rank_list"
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:paddingTop="23dp"
          android:layout_weight="2"
          android:background="@null"
          android:cacheColorHint="#00000000"
          android:listSelector="@android:color/transparent"
          android:dividerHeight="5dp"
          android:divider="@null" >
      </ListView>
      
        <TextView 
            android:id="@+id/integral_rank_fighting"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:gravity="center_horizontal"
            android:paddingTop="9dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:shadowDx="1.2"
            android:shadowDy="1.2"
            android:shadowRadius="5"
	        android:shadowColor="#004400"
            /> 
      <View 
          android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
          />

</LinearLayout>
